{
  "name": "git-commit-mcp",
  "version": "0.1.10",
  "description": "MCP server for standardizing Git commit messages",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "git-commit-mcp": "./build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "node -e \"import('fs').then(fs => fs.chmodSync('build/index.js', '755'))\"",
    "start": "node build/index.js",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "build/**/*"
  ],
  "keywords": [
    "mcp",
    "git",
    "commit",
    "standardization"
  ],
  "author": "pvwen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pvwen/git-commit-mcp.git"
  },
  "homepage": "https://github.com/pvwen/git-commit-mcp#readme",
  "bugs": {
    "url": "https://github.com/pvwen/git-commit-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "simple-git": "^3.22.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "typescript": "^5.0.0"
  }
}
